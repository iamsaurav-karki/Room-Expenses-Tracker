// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Room {
  id           String   @id @default(uuid()) @db.Uuid
  name         String
  currencyCode String   @default("USD") @map("currency_code") @db.Char(3)
  createdAt    DateTime @default(now()) @map("created_at") @db.Timestamptz(6)
  updatedAt    DateTime @updatedAt @map("updated_at") @db.Timestamptz(6)

  members  Member[]
  expenses Expense[]

  @@map("rooms")
}

model Member {
  id          String   @id @default(uuid()) @db.Uuid
  roomId      String   @map("room_id") @db.Uuid
  fullName    String   @map("full_name")
  email       String?  @unique
  nickname    String?
  phoneNumber String?  @map("phone_number")
  isActive    Boolean  @default(true) @map("is_active")
  createdAt   DateTime @default(now()) @map("created_at") @db.Timestamptz(6)
  updatedAt   DateTime @updatedAt @map("updated_at") @db.Timestamptz(6)

  room            Room             @relation(fields: [roomId], references: [id], onDelete: Cascade)
  expensePayments ExpensePayment[]
  expenseShares   ExpenseShare[]

  @@index([roomId])
  @@map("members")
}

model Expense {
  id          String   @id @default(uuid()) @db.Uuid
  roomId      String   @map("room_id") @db.Uuid
  title       String
  description String?
  category    String
  expenseDate DateTime @default(now()) @map("expense_date") @db.Date
  createdAt   DateTime @default(now()) @map("created_at") @db.Timestamptz(6)
  updatedAt   DateTime @updatedAt @map("updated_at") @db.Timestamptz(6)

  room            Room             @relation(fields: [roomId], references: [id], onDelete: Cascade)
  expensePayments ExpensePayment[]
  expenseShares   ExpenseShare[]

  @@index([roomId, expenseDate(sort: Desc)])
  @@map("expenses")
}

model ExpensePayment {
  id         String   @id @default(uuid()) @db.Uuid
  expenseId  String   @map("expense_id") @db.Uuid
  memberId   String?  @map("member_id") @db.Uuid
  paidAmount Decimal  @map("paid_amount") @db.Decimal(12, 2)
  createdAt  DateTime @default(now()) @map("created_at") @db.Timestamptz(6)

  expense Expense @relation(fields: [expenseId], references: [id], onDelete: Cascade)
  member  Member? @relation(fields: [memberId], references: [id], onDelete: SetNull)

  @@index([expenseId])
  @@map("expense_payments")
}

model ExpenseShare {
  id         String   @id @default(uuid()) @db.Uuid
  expenseId  String   @map("expense_id") @db.Uuid
  memberId   String   @map("member_id") @db.Uuid
  owedAmount Decimal  @map("owed_amount") @db.Decimal(12, 2)
  createdAt  DateTime @default(now()) @map("created_at") @db.Timestamptz(6)

  expense Expense @relation(fields: [expenseId], references: [id], onDelete: Cascade)
  member  Member  @relation(fields: [memberId], references: [id], onDelete: Cascade)

  @@unique([expenseId, memberId])
  @@index([expenseId])
  @@map("expense_shares")
}
